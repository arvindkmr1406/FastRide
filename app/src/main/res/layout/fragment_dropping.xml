<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgdas"
    tools:context=".DroppingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/decline_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/complete_ride"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Durgapur vidhan nagar 145/8B"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:background="@drawable/btn_round_blue"
                        android:gravity="center"
                        android:padding="5dp"/>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#000522">

            <TextView
                android:id="@+id/profile_dp_rout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="5dp"
                android:text="Dropping Off Rahul X"
                android:textColor="#fff"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rahul X"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginTop="80dp"
                android:padding="15dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_phone_white"/>

            <TextView
                android:id="@+id/btn_complete_ride"
                android:layout_below="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="COMPLETE RIDE"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_arrow_right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="#C80000"/>


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>