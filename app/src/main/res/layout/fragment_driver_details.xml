<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <LinearLayout
                    android:id="@+id/linlaHeaderProgress"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/pbHeaderProgress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ProgressBar>
                </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Driver Details"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/city_spnr"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_round"
                android:drawableRight="@drawable/ic_drop_down"
                android:padding="10dp"
                android:visibility="gone">
            </Spinner>

            <TextView
                android:id="@+id/city_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_round"
                android:drawableRight="@drawable/ic_drop_down"
                android:gravity="center"
                android:hint="Select City"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/city_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_round"
                android:gravity="center"
                android:hint="City Id"
                android:padding="5dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/state_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_round"
                android:gravity="center"
                android:hint="state Name"
                android:padding="5dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">


                    <EditText
                        android:id="@+id/pin_code"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_round"
                        android:hint="Pin code"
                        android:maxLength="8"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:textColorHint="#7A7D95" />

                    <Spinner
                        android:layout_weight="1"
                        android:id="@+id/blood_grp_spnr"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/edit_round"
                        android:drawableRight="@drawable/ic_drop_down"
                        android:padding="5dp"
                        android:visibility="gone">
                    </Spinner>

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/blood_grp_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/edit_round"
                        android:drawableRight="@drawable/ic_drop_down"
                        android:gravity="center"
                        android:hint="Blood Group"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>

                <EditText
                    android:id="@+id/em_contact"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_round"
                    android:hint="Emergency Number"
                    android:maxLength="10"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="#7A7D95" />

                <Spinner
                    android:id="@+id/vehicle_spnr"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/edit_round"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:visibility="gone">
                </Spinner>
                <TextView
                    android:id="@+id/vehicle_Name"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_round"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:gravity="center"
                    android:hint="Select Vehicle"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Select Vehicle"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/vehicle_Id"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="vehicle Id"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/vehicle_IconUrl"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Vehicle URL"
                    android:visibility="gone"/>


                <EditText
                    android:id="@+id/model_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_round"
                    android:hint="Modal Name"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="#7A7D95" />

                <EditText
                    android:id="@+id/vehicle_number"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_round"
                    android:hint="Vehicle Number"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="#7A7D95" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/pan_card_upload"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_round"
                            android:drawableRight="@drawable/ic_file_up"
                            android:gravity="center"
                            android:hint="PAN Upload"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textColorHint="#7A7D95" />
                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/IVPreviewImage_pan"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_file_upload"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/dl_upload"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_round"
                            android:drawableRight="@drawable/ic_file_up"
                            android:gravity="center"
                            android:hint="DL Upload"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textColorHint="#7A7D95" />
                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/IVPreviewImage_dl"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_file_upload"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/rc_upload"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_round"
                            android:drawableRight="@drawable/ic_file_up"
                            android:gravity="center"
                            android:hint="RC Upload"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textColorHint="#7A7D95" />
                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/IVPreviewImage_rc"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_file_upload"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/insurance_upload"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_round"
                            android:drawableRight="@drawable/ic_file_up"
                            android:gravity="center"
                            android:hint="Insurance Upload"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textColorHint="#7A7D95" />
                        <ImageView
                            android:layout_weight="1"
                            android:id="@+id/IVPreviewImage_insurance"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/ic_file_upload"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_round_blue"
                    android:text="Submit" />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</FrameLayout>